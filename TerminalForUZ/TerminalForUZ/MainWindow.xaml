<Window xmlns:local="clr-namespace:TerminalForUZ"
        x:Class="TerminalForUZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF104D63" Offset="0"/>
                <GradientStop Color="#FF48C7F6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Name="Login_Textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="168" Margin="277,137,0,0"/>
        <TextBox Name="Password_Textbox" HorizontalAlignment="Left" Height="23" Margin="277,204,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="168"/>
        <Button Name ="Login_Button" Content="Войти" HorizontalAlignment="Left" Margin="330,280,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#FFE7E2CF"/>

    </Grid>
</Window>
